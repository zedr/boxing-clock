#:kivy 1.9.1
#:import LedLabel boxe_clock.labels.LedLabel
#:import LedButton boxe_clock.buttons.LedButton
#:import TimerButton boxe_clock.buttons.TimerButton

<RowLayout@BoxLayout>:
    orientation: "vertical"

<AppRoot>:
    direction: "right"

    RowLayout:
        id: timer
        padding: -50,-50,-50,-50
        LedLabel:
            id: status_label
            font_size: 80
            text: "" if timer_button.clock_state else "Paused"
        TimerButton:
            id: timer_button
            markup: True
            font_size: root.base_font_size
            on_press:
                self.toggle()
        LedLabel:
            font_size: 160
            text: timer_button.round_verbose

    RowLayout:
        Label:
            text: "Config"
